<h1>Eat-Da-Burger</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col-6">
                {{#each burger}}
                 {{#unless this.devoured}}
                  <div>
                    <form action="/devoured"{{this.id}} method="POST">
                        <div class="addBurger">{{this.burger_name}}</div>
                        <button type="submit" class="devour">DEVOUR</button>
                    </form>
                 </div>
                {{/unless}}
            {{/each}}
        </div>

        <div class="col-6">
            {{#each burgers}}
                 {{#if this.devoured}}
                     <div class="goneBurger">
                         <div>
                         {{this.burger_name}}
                     </div>
                 </div>
                {{/if}}
             {{/each}}
             </div>
        </div>
    </div>
</main>

<h2> Add A New Burger</h2>

<div class="row">
    <div class="col-12">
        <form action="/addburger" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="vegan burgers semi-welcome"></textarea>
            <button type="submit" class="newBurgerbtn" >Add Burger</button>
        </form>
    </div>
</div>