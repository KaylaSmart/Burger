<h1>Eat-Da-Burger</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col-6">
                {{#each burgers}}
                 {{#unless this.devoured}}
                  <div>
                    <form action="/burgers/{{this.id}}?_method=PUT" method ="POST" >
                        <button type="submit" class="addBurger">{{this.burger_name}}</button>
                    </form>
                 </div>
                {{/unless}}
            {{/each}}
        </div>

        <div class="col-6">
            {{#each burgers}}
                 {{#if this.devoured}}
                     <div class="goneBurger">
                         <div>
                         {{this.burger_name}}
                     </div>
                 </div>
                {{/if}}
             {{/each}}
             </div>
        </div>
    </div>
</main>

<h2> Add A New Burger</h2>

<div class="row">
    <div class="col-12">
        <form>
            <textarea type="text" id="name" name="burger_name" placeholder="vegan burgers semi-welcome"></textarea>
            <button type="submit" class="newBurgerbtn">Add Burger</button>
        </form>
    </div>
</div>